<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".CommentActivity">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:paddingTop="15dp"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <!-- 1: event information-->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:orientation="vertical">
      <!-- 1.1: event title-->
      <TextView
        android:id="@+id/comment_view_event_title"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="Roboto"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="20sp"/>
      <!-- 1.2: user info, event time, event address-->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <ImageView
          android:id="@+id/comment_view_user_image"
          android:layout_width="42dp"
          android:layout_height="42dp"/>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingStart="10dp"
          android:orientation="vertical">
          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
              android:id="@+id/comment_view_user_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:fontFamily="Roboto"
              android:textColor="@color/blue"
              android:textSize="16sp"/>
            <TextView
              android:id="@+id/comment_view_user_location"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:fontFamily="Roboto"
              android:textColor="@color/textDarkGrey"
              android:textSize="16sp"/>
          </RelativeLayout>
          <TextView
            android:id="@+id/comment_view_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:fontFamily="Roboto"
            android:textColor="@color/textDarkGrey"
            android:textSize="12sp"/>
        </LinearLayout>
      </LinearLayout>
      <!-- 1.3: cutting line-->
      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cuttingLine"/>
      <!-- 1.4: event description-->
      <TextView
        android:id="@+id/comment_view_event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:fontFamily="Roboto"
        android:textColor="@color/textDarkDarkGrey"
        android:textSize="16sp"/>
      <!-- 1.5: event image-->
      <ImageView
        android:id="@+id/comment_view_event_image"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:paddingBottom="15dp"
        android:visibility="gone"/>
    </LinearLayout>
    <!-- 2: cutting line-->
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/cuttingLine"/>
    <!-- 3: like and comment-->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:orientation="horizontal">
      <!-- 3.1: like number and like icon-->
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">
        <TextView
          android:id="@+id/comment_view_event_likes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:gravity="center"
          android:textSize="20sp"/>
        <ImageView
          android:id="@+id/comment_view_event_like_button"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/like"/>
      </LinearLayout>
      <!-- 3.2: comment number and comment icon-->
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:orientation="vertical">
        <TextView
          android:id="@+id/comment_view_comment_number"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:gravity="center"
          android:textSize="20sp"/>
        <ImageView
          android:id="@+id/comment_main_comment_img"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/comment"/>
      </LinearLayout>
    </LinearLayout>
    <!-- 4: cutting line-->
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/cuttingLine"/>
    <androidx.recyclerview.widget.RecyclerView
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/comment_recycler_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="100dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      app:layoutManager="LinearLayoutManager"
      tools:context=".CommentActivity"
      tools:listitem="@layout/comment_item"/>
  </LinearLayout>
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">
    <EditText
      android:id="@+id/comment_edit_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toStartOf="@+id/comment_submit"/>

    <ImageView
      android:id="@+id/comment_submit"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginEnd="4dp"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:src="@drawable/send"/>
  </RelativeLayout>
</RelativeLayout>